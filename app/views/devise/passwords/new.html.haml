.tt-header-margin
#content-wrapper
  .container
    .empty-space.marg-lg-b100.marg-sm-b50.marg-xs-b30
    / TT-TITLE
    .tt-title
      %h2.c-h2
        %small Olvidaste tu password?
    .empty-space.marg-lg-b35.marg-sm-b30
    .row
      .col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
        .tt-contact-form
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = devise_error_messages!
            .field
              = f.email_field :email, autofocus: true,  placeholder: 'Email', class: 'c-input type-2 size-2'
              %br/
              %br/
            .actions
              = f.submit "Enviame las instrucciones para reestablecer mi correo", class: 'c-btn type-1 size-3 full'
              %br/
              %br/
          .text-center
            = render "devise/shared/links"
    .empty-space.marg-lg-b150.marg-sm-b50.marg-xs-b30
