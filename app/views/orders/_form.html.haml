= form_for setup_order(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :number, autofocus: true, placeholder: 'Number', class: 'c-input type-2 size-2'
    %br/
    %br/
  .field
    = f.email_field :email, placeholder: 'Email', class: 'c-input type-2 size-2', value: current_user.email
    %br/
    %br/
  .field
    = f.fields_for :line_items do |ff|
      = ff.text_field :quantity
      = ff.hidden_field :product_id, value: Product.last.id
      = ff.hidden_field :order_id, value: @order.id
  .actions
    = f.submit 'Save', class: 'c-btn type-1 size-3 full'
