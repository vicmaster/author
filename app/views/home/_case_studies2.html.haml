.tt-devider
.container
  .empty-space.marg-lg-b95.marg-sm-b50
  .row
    .col-sm-10.col-sm-offset-1
      / TT-TITLE
      .tt-title
        -# .tt-title-cat Consigue la atraccion que quieres
        %h2.c-h2
          %small= t("home.cases_section.title")
      .empty-space.marg-lg-b40.marg-sm-b30
      / TT-TAB-WRAPPER TYPE-1
      .tt-tab-wrapper.type-1
        .tt-tab-nav-wrapper
          .tt-tab-select
            .select-arrow
              %i.fa.fa-angle-down
            %select
              %option{ :selected => "selected" }
                = t("home.cases_section.nav.opt1")
              %option= t("home.cases_section.nav.opt2")
              %option= t("home.cases_section.nav.opt3")
              %option= t("home.cases_section.nav.opt4")
          .tt-nav-tab.mbottom50
            .tt-nav-tab-item.active
              %span.lnr.lnr-rocket
              %span.tt-analitics-text= t("home.cases_section.nav.opt1")
            .tt-nav-tab-item
              %span.lnr.lnr-smile
              %span.tt-analitics-text= t("home.cases_section.nav.opt2")
            .tt-nav-tab-item
              %span.lnr.lnr-thumbs-up
              %span.tt-analitics-text= t("home.cases_section.nav.opt3")
            .tt-nav-tab-item
              %span.lnr.lnr-user
              %span.tt-analitics-text= t("home.cases_section.nav.opt4")
        .tt-tabs-content.clearfix.mbottom50
          .tt-tab-info.active
            .row
              .col-md-5
                .simple-text.size-3
                  %h3
                    %small= t("home.cases_section.studies.title")
